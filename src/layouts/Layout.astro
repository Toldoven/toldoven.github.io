---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "@fontsource/inter";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!-- <meta name="description" content="Astro description" /> -->
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>
	<body class="container mx-auto text-white bg-black">
		<div class="bg-brand p-24">
			<slot />
		</div>
	</body>
</html>

<style is:global>

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {

	p {
		@apply text-xl;
	}

	* {
		@apply subpixel-antialiased;
	}
	 
	h1, h2, h3, h4, h5, h6 {
		@apply font-semibold;
		/* font-family: "Ma", system-ui, sans-serif; */
	}
	
	h1 {
		@apply text-4xl;
	}
	h2 {
		@apply text-3xl;
	}
	h3 {
		@apply text-2xl;
	}
	h4 {
		@apply text-xl;
	}
	
	a {
		@apply text-neutral-200 hover:text-white transition
	}
}

</style>
